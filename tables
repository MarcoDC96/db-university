create table departments(
id INT not null auto_increment,
nome VARCHAR(100),
address VARCHAR(255),
phone INT,
email VARCHAR(50),
website VARCHAR(100),
head_of_departments VARCHAR(100),
primary key(id)
);

create table voti(
id INT not null auto_increment,
nome VARCHAR(100),
address VARCHAR(255),
`level` INT,
email VARCHAR(100),
website VARCHAR(255),
primary key(id)
);

alter table `voti`
add column department_id INT;

alter table `voti`
add foreign key(department_id) references departments(id);

CREATE TABLE students(
	id INT NOT NULL AUTO_INCREMENT,
    name VARCHAR (100),
    surname VARCHAR (100),
    date_of_birth DATE,
    fiscal_code VARCHAR(20),
    enrolment_date DATE,
    registration_number INT,
    email VARCHAR (50),
    PRIMARY KEY (id)
);

alter table `students`
add column degree_id INT;

alter table `students`
add foreign key(degree_id) references voti(id);

